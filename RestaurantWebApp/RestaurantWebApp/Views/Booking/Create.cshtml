
@model DataAccess.DataTransferObjects.ReservationDTO

<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>  ViewBag.Title = "Create" </title>
    @Scripts.Render("~/bundles/modernizr")
</head>

<h2>Bordbestilling</h2>
<body>
    <div class="lass=" container body-content"">

        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(model => model.ReservationTime, "Reservationstidspunkt", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <fieldset>

                            @Html.TextBoxFor(model => model.ReservationTime, new { @type = "date", @class = "form-control datepicker", @id = "txtDate", @name = "date" })
                            @Html.ValidationMessageFor(model => model.ReservationTime, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(model => model.ReservationTime, new { @type = "time", @class = "form-control datepicker", @id = "txtTime", @name = "time" })
                            @Html.ValidationMessageFor(model => model.ReservationTime, "", new { @class = "text-danger" })
                        </fieldset>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NoOfPeople, "Antal Personer", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NoOfPeople, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoOfPeople, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tables, "Borde",  new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        <select name="Tables" id="Tables2" class="form-control" multiple>
                            @foreach (var x in Model.Tables)
                            {
                                <option value="@x.Id">Bord:  @x.TableNumber </option>
                            }
                        </select>

                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label> login eller skriver her under</label>
                        <button type="button">Login!</button>
                        @* //TODO dette er palce holder for når login er er lavet, og den burde laves med razor *@
                    </div>

                    @Html.LabelFor(model => model.Customer.FirstName, "Navn:", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.FirstName, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.Customer.Phone, "Tlf:", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Phone, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.Customer.Email, "Email", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Deposit, "Depositum", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Deposit)
                            @Html.ValidationMessageFor(model => model.Deposit, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Note, "Evt Notat", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="/Booking/OrderFoods" class="btn btn-primary">
                            Bestil Mad
                            @* //TODO Mangler implmentation *@
                        </a>
                        <input type="submit" value="Gem og afslut" class="btn btn-primary" />
                    </div>
                </div>
            </div>


        } 
    </div>

</body>
