                            <label class="col-md-2 control-label" for="psw"><b>Password</b></label>
                            <div class="col-md-10">
                                <input class="form-control" type="password" placeholder="Enter Password" name="psw" id="psw" required>
                                @*@Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", @id = "Password", @placeholder = "Password"})*@
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Log in" class="btn btn-primary" />
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Register as a new user", "Register")
                        </p>
                        <div class="form-group">
