                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="uname"><b>Username</b></label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" placeholder="Enter Username" name="uname" id="uname" required>
