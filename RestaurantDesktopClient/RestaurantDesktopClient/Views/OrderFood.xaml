<Page x:Class="RestaurantDesktopClient.Views.OrderFood"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantDesktopClient.Views" 
      xmlns:controls="clr-namespace:RestaurantDesktopClient.Views.Controls" 
      xmlns:local1="clr-namespace:RestaurantDesktopClient.Views.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderFood">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />

        </Grid.RowDefinitions>

        <controls:ListPageControl x:Name="FoodListPage" Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="4"  Margin="15,0,0,0" >
            <UserControl.DataContext>
                <local1:SearchFoodsViewModel/>
            </UserControl.DataContext>
        </controls:ListPageControl>
        <controls:ListPageControl x:Name="DrinkListPage" Grid.Column="5" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="4"  Margin="15,0,0,0" >
            <UserControl.DataContext>
                <local1:SearchDriksViewModel/>
            </UserControl.DataContext>
        </controls:ListPageControl>
        <controls:ListPageControl x:Name="SummaryListPage" Grid.Column="0" Grid.ColumnSpan="10" Grid.Row="5" Grid.RowSpan="4"  Margin="15,0,0,0" />
    </Grid>
</Page>
